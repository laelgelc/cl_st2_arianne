@thesis{despositoPraticaEscritaEm2012a,
  type = {Tese (Doutorado em Linguística Aplicada e Estudos da Linguagem) - Programa de Estudos Pós-Graduados em Linguística Aplicada e Estudos da Linguagem},
  title = {Prática escrita em língua inglesa: um curso online para professores da rede estadual, sob a perspectiva da complexidade},
