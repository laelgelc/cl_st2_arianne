@book{alarcaoFormacaoReflexivaProfessores1996,
  title = {Formação reflexiva de professores: estratégias de supervisão},
  shorttitle = {Formação reflexiva de professores},
  editor = {Alarcão, Isabel},
  date = {1996},
  publisher = {Porto Editora},
  location = {Porto},
  abstract = {Na arena educativa emergem, de vez em quando, ideias novas - ou renovadas - que catalisam, contagiam e... quase se transformam em slogans alienadores. Professor reflexivo é, no estado atual da formação de professores, uma dessas ideias. É de bom tom profissional, hoje em dia, os teóricos referirem, enquadrarem e tomarem posição crítica perante este conceito. Reportam-se a autores atuais como Schön e Zeichner revisitam Dewey, tentam explorar modelos de formação de cariz reflexivo. Neste livro apresenta-se o pensamento de D. Schön, o grande crítico da formação atual dos profissionais, analisa-se o próprio conceito de reflexão tal como ele nos é apresentado por John Dewey, referem-se as linhas enquadradoras de uma formação de tipo reflexivo defendidas por Zeichner e outros autores. Mas não se fica por aí. Conscientes da dificuldade em identificar e utilizar estratégias para desenvolver nos professores atitudes e capacidades de reflexão, os seus autores lançam-se num trabalho conjunto, a explorar essa temática, a sintetizar contribuições de outros autores, a apresentar sugestões. Ao lado do conceito de professor reflexivo, tem aparecido também na ribalta educativa o conceito de aluno autónomo. Não era, pois, possível deixar de considerar também o papel do professor no desenvolvimento da autonomia do aluno nem as suas implicações na formação dos professores. A maior parte dos autores que contribuíram para esta obra são, para além de professores, também formadores de professores. Sentiram, pois, que, ao preocuparem-se com a formação do professor reflexivo, não podiam esquecer aquilo que, hoje, alguns começam a designar por supervisor reflexivo. Os professores e os supervisores que pretendam aprender a analisar, numa postura prospetiva, interativa e retrospetiva, as implicações da sua atuação não só ao nível técnico e prático, mas também crítico e emancipatório, encontram neste livro oportunidades para refletir e possíveis recursos da ação.},
  isbn = {978-972-0-34721-3},
  langid = {brazilian},
  annotation = {OCLC: 879637534}
}

