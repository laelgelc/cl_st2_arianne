\usepackage{changepage}
\newcounter{textsample}
\newenvironment{textsample}[1]
{
  \refstepcounter{textsample}
  \begin{adjustwidth}{1in}{0in}
  \parindent=0pt
  \noindent\vspace{0.5em}\\ % Removed \rule{\linewidth}{0.4pt}
  \noindent Text Sample \arabic{textsample}: #1\\[.1em]
}
{
  \vspace{.1em}
  % \noindent\rule{\linewidth}{0.4pt} % This was already commented out, but it's the other rule.
  \end{adjustwidth}\vspace{1em}
}

